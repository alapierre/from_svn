        <module>swing-worker</module>
        <module>swing-extentions</module>
    </modules>

    <pluginRepositories>
        <pluginRepository>
            <id>csartifactory</id>
            <url>http://artifactory.pl.chartsearch.net:8081/artifactory/libs-releases</url>
        </pluginRepository>
    </pluginRepositories>
    <repositories>
        <repository>
            <id>csartifactory-snapshots</id>
            <name>artifactory server</name>
            <url>http://artifactory.pl.chartsearch.net:8081/artifactory/libs-snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>csartifactory</id>
            <name>artifactory server</name>
            <url>http://artifactory.pl.chartsearch.net:8081/artifactory/libs-releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>csdeploy</id>
            <url>http://artifactory.pl.chartsearch.net:8081/artifactory/libs-releases-local</url>
        </repository>
        <snapshotRepository>
            <id>cssnapshot</id>
            <url>http://artifactory.pl.chartsearch.net:8081/artifactory/libs-snapshots-local</url>
        </snapshotRepository>
        <site>
            <id>cssitedeploy</id>
            <url>scp://maven.pl.chartsearch.net/export/home0/maven/sites/chartsource-masterpom</url>
        </site>
    </distributionManagement>

